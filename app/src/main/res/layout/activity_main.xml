<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#20242A"
    android:fitsSystemWindows="true"
    tools:context="com.bestandroidaboudemaybas.masebha.MainActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="#20242A"
        android:padding="0dp"
        app:contentInsetStart="0dp"
        app:title=""
        app:titleTextColor="@color/white">

        <ImageButton
            android:id="@+id/settings_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:background="@drawable/rounded_layout_colorpicker"
            android:contentDescription="Settings"
            android:padding="5dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/settings_icon" />

        <!-- Center Hijri date -->
        <LinearLayout
            android:id="@+id/hijri_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginLeft="20dp"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/hijri_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="١ رمضان ١٤٤٧"
                android:fontFamily="@font/tajawal_medium"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/hijri_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="السبت"
                android:fontFamily="@font/tajawal_medium"
                android:textColor="@color/white"
                android:textSize="14sp" />
        </LinearLayout>

<!--        <ImageView-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_gravity="start"-->
<!--            android:layout_marginLeft="20dp"-->
<!--            android:layout_marginTop="7dp"-->
<!--            android:layout_marginBottom="7dp"-->
<!--            android:src="@drawable/icon_islamic_arabic_vector" />-->

        <ImageButton
            android:id="@+id/firebase_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:background="@drawable/rounded_layout_colorpicker"
            android:contentDescription="Announcements"
            android:padding="4dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_firebase" />

    </androidx.appcompat.widget.Toolbar>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        android:paddingTop="10dp"
        android:clipToPadding="false"
        tools:ignore="SpeakableTextPresentCheck" />

    <RelativeLayout
        android:id="@+id/bottom_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="30dp"
            android:contentDescription="Add zeker"
            android:elevation="0dp"
            app:pressedTranslationZ="0dp"
            app:backgroundTint="#43B849"
            app:tint="@null"
            app:srcCompat="@drawable/add_icon" />

    </RelativeLayout>

</RelativeLayout>
