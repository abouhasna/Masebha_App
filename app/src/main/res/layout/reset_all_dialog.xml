<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="right"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:id="@+id/alert_message1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:fontFamily="@font/tajawal_light"
        android:text="انتبه!"
        android:textColor="#000000"
        android:textSize="30sp" />
    <TextView
        android:id="@+id/alert_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:fontFamily="@font/tajawal_light"
        android:text="سوف يتم تصفير جميع الأرقام في كل الأذكار!!"
        android:textColor="#000000"
        android:textSize="20sp" />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_centerVertical="true"
            >

            <com.google.android.material.button.MaterialButton
                android:id="@+id/tesfir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/alert_message"
                android:layout_marginRight="5dp"
                android:backgroundTint="#CE0101"
                android:fontFamily="@font/tajawal_light"
                android:textSize="15sp"
                android:text="تصفير الكل"
                android:textColor="@color/white"
                app:cornerRadius="10dp"
                android:padding="0dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/cancel_reset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/alert_message"
                android:backgroundTint="#615E5E"
                android:fontFamily="@font/tajawal_extralight"
                android:text="الغاء"
                android:textSize="15sp"
                android:textColor="@color/white"
                app:cornerRadius="10dp" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
